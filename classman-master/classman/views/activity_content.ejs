                <button class="btn btn-danger">
                    <i class="ace-icon fa fa-cogs"></i>
                </button>

                <!-- /section:basics/sidebar.layout.shortcuts -->
            </div>


        </div><!-- /.sidebar-shortcuts -->

        <!--菜单栏-->
        <ul class="nav nav-list">
            <!--主页-->
            <li class="">
                <a href="/index">
                    <i class="menu-icon fa fa-tachometer"></i>
                    <span class="menu-text"> 主页 </span>
                </a>

                <b class="arrow"></b>
            </li>

            <!--通知-->
            <!--active open 控制菜单栏是否展开-->
            <li class="">
                <a href="#" class="dropdown-toggle">
                    <i class="menu-icon fa fa-desktop"></i>
							<span class="menu-text">
								通知管理
							</span>

                    <b class="arrow fa fa-angle-down"></b>
                </a>

                <b class="arrow"></b>

                <ul class="submenu">
                    <li class="">
                        <a href="#" class="dropdown-toggle">
                            <i class="menu-icon fa fa-caret-right"></i>

                            通知查看
                            <b class="arrow fa fa-angle-down"></b>
                        </a>

                        <b class="arrow"></b>

                        <ul class="submenu">
                            <li class="">
                                <a href="/notice_content_yuan">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    学苑通知
                                </a>

                                <b class="arrow"></b>
                            </li>

                            <li class="">
                                <a href="/notice_content_zhibu">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    支部通知
                                </a>

                                <b class="arrow"></b>
                            </li>

                        </ul>
                    </li>

                    <% if (user.stu_role == 1 || user.stu_role == 2) { %>
                    <li class="">
                        <a href="/notice_post">
                            <i class="menu-icon fa fa-caret-right"></i>
                            通知发布
                        </a>

                        <b class="arrow"></b>
                    </li>
                    <% } %>

                </ul>
            </li>


            <!--活动管理-->
            <li class="active open">
                <a href="#" class="dropdown-toggle">
                    <i class="menu-icon fa fa-picture-o"></i>
							<span class="menu-text">
								活动管理
							</span>

                    <b class="arrow fa fa-angle-down"></b>
                </a>

                <b class="arrow"></b>

                <ul class="submenu">
                    <li class="active open">
                        <a href="#" class="dropdown-toggle">
                            <i class="menu-icon fa fa-caret-right"></i>

                            活动查看
                            <b class="arrow fa fa-angle-down"></b>
                        </a>

                        <b class="arrow"></b>

                        <ul class="submenu">
                            <li class="">
                                <a href="/activity_content_yuan">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    学苑活动
                                </a>

                                <b class="arrow"></b>
                            </li>

                            <li class="">
                                <a href="/activity_content_zhibu">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    支部活动
                                </a>

                                <b class="arrow"></b>
                            </li>

                        </ul>
                    </li>
                    <% if (user.stu_role == 1 || user.stu_role == 2) { %>
                    <li class="">
                        <a href="/activity_post">
                            <i class="menu-icon fa fa-caret-right"></i>
                            活动发布
                        </a>

                        <b class="arrow"></b>
                    </li>
                    <%}%>
                </ul>
            </li>

            <!--文件管理-->
            <li class="">
                <a href="#" class="dropdown-toggle">
                    <i class="menu-icon fa fa-file-o"></i>

							<span class="menu-text">
								文件管理

                                <!-- #section:basics/sidebar.layout.badge -->
								<span class="badge badge-primary" title="5 files">5</span>

                                <!-- /section:basics/sidebar.layout.badge -->
							</span>

                    <b class="arrow fa fa-angle-down"></b>
                </a>

                <b class="arrow"></b>

                <ul class="submenu">
                    <li class="">
                        <a href="/upload">
                            <i class="menu-icon fa fa-caret-right"></i>
                            文件上传
                        </a>

                        <b class="arrow"></b>
                    </li>

                    <li class="">
                        <a href="/file_list">
                            <i class="menu-icon fa fa-caret-right"></i>
                            文件浏览
                        </a>

                        <b class="arrow"></b>
                    </li>

                </ul>
            </li>

            <!--生活-->
            <li class="">
                <a href="#" class="dropdown-toggle">
                    <i class="menu-icon fa fa-list"></i>
							<span class="menu-text">
								生活管理
							</span>

                    <b class="arrow fa fa-angle-down"></b>
                </a>

                <b class="arrow"></b>

                <ul class="submenu">
                    <!--心里普查-->
                    <li class="">
                        <a href="#" class="dropdown-toggle">
                            <i class="menu-icon fa fa-caret-right"></i>

                            心里普查
                            <b class="arrow fa fa-angle-down"></b>
                        </a>

                        <b class="arrow"></b>

                        <ul class="submenu">
                            <li class="">
                                <a href="#">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    心里情况填写
                                </a>

                                <b class="arrow"></b>
                            </li>

                            <li class="">
                                <a href="#">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    普查结果查看
                                </a>

                                <b class="arrow"></b>
                            </li>

                        </ul>
                    </li>

                    <!--学苑小圈-->
                    <li class="">
                        <a href="#" class="dropdown-toggle">
                            <i class="menu-icon fa fa-caret-right"></i>

                            学苑小圈
                            <b class="arrow fa fa-angle-down"></b>
                        </a>

                        <b class="arrow"></b>

                        <ul class="submenu">
                            <li class="">
                                <a href="#">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    书籍分享
                                </a>

                                <b class="arrow"></b>
                            </li>

                            <li class="">
                                <a href="#">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    心情分享
                                </a>

                                <b class="arrow"></b>
                            </li>

                        </ul>
                    </li>

                    <!--通讯录-->
                    <li class="">
                        <a href="/contact">
                            <i class="menu-icon fa fa-caret-right"></i>
                            通讯录
                        </a>

                        <b class="arrow"></b>
                    </li>

                </ul>
            </li>

            <!--意见建议-->
            <% if (user.stu_role == 1 || user.stu_role == 2) {%>
            <li class="">
                <a href="#" class="dropdown-toggle">
                    <i class="menu-icon fa fa-file-o"></i>

							<span class="menu-text">
								意见管理


							</span>

                    <b class="arrow fa fa-angle-down"></b>
                </a>

                <b class="arrow"></b>

                <ul class="submenu">
                    <li class="">
                        <a href="/advice">
                            <i class="menu-icon fa fa-caret-right"></i>
                            意见建议
                        </a>

                        <b class="arrow"></b>
                    </li>

                    <li class="">
                        <a href="/advice_list">
                            <i class="menu-icon fa fa-caret-right"></i>
                            意见列表
                        </a>

                        <b class="arrow"></b>
                    </li>

                </ul>
            </li>
            <%} else {%>
            <li class="">
                <a href="/advice">
                    <i class="menu-icon fa fa-pencil-square-o"></i>

							<span class="menu-text">
								意见建议
							</span>
                </a>

                <b class="arrow"></b>
            </li>
            <%}%>

        </ul><!-- /.nav-list -->

        <!-- #section:basics/sidebar.layout.minimize -->
        <div class="sidebar-toggle sidebar-collapse" id="sidebar-collapse">
            <i class="ace-icon fa fa-angle-double-left" data-icon1="ace-icon fa fa-angle-double-left"
               data-icon2="ace-icon fa fa-angle-double-right"></i>
        </div>

        <!-- /section:basics/sidebar.layout.minimize -->
        <script type="text/javascript">
            try {
                ace.settings.check('sidebar', 'collapsed')
            } catch (e) {
            }
        </script>
    </div>

    <!-- /section:basics/sidebar -->
    <div class="main-content" ng-app="app">
        <div class="main-content-inner col-xs-12">
            <!-- #section:basics/content.breadcrumbs -->
            <!--索引-->
            <div class="breadcrumbs" id="breadcrumbs">
                <script type="text/javascript">
                    try {
                        ace.settings.check('breadcrumbs', 'fixed')
                    } catch (e) {
                    }
                </script>

                <ul class="breadcrumb">
                    <li>
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="/index">主页</a>
                    </li>

                    <li>
                        <a href="/index">活动管理</a>
                    </li>
                    <li class="active"><%= type %></li>
                </ul><!-- /.breadcrumb -->

                <!-- #section:basics/content.searchbox -->
                <div class="nav-search" id="nav-search">
                    <form class="form-search">
								<span class="input-icon">
									<input type="text" placeholder="Search ..." class="nav-search-input"
                                           id="nav-search-input" autocomplete="off"/>
									<i class="ace-icon fa fa-search nav-search-icon"></i>
								</span>
                    </form>
                </div><!-- /.nav-search -->

                <!-- /section:basics/content.searchbox -->
            </div>

            <!-- /section:basics/content.breadcrumbs -->
            <div class="page-content">

                <h3 class="row header smaller lighter blue">
                    <span class="col-xs-6"> 活动 </span>
                </h3>

                <div id="accordion" class="accordion-style1 panel-group">
                    <% for(var i in activities){ %>
                    <div class="panel panel-default">
                        <div class="panel-heading" style="overflow-x: auto">

                            <h4 class="panel-title">
                                <b class="accordion-toggle">
                                    <i class="ace-icon fa fa-angle-down bigger-110"
                                       data-icon-hide="ace-icon fa fa-angle-down"
                                       data-icon-show="ace-icon fa fa-angle-right"></i>
                                    &nbsp;<%= activities[i].activity_name %> <span class="pull-right"
                                                                              style="padding-right: 20px">&nbsp;&nbsp;<%= activities[i].activity_from %>
                                        &nbsp;&nbsp;<%= activities[i].activity_post_time %>
                                        <% if(user.stu_role == 1 || user.stu_role == 2){ %>

                                        &nbsp;&nbsp;&nbsp;
                                        <a href="/activity_update?id=<%= activities[i].id %>">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                        &nbsp;&nbsp;&nbsp;

                                         <a href="/activity_delete?id=<%= activities[i].id %>&type=<%=activities[i].activity_type%>">
                                             <span class="glyphicon glyphicon-remove"></span>
                                         </a>
                                        <% } %>

                                    </span>
                                </b>

                            </h4>


                        </div>

                        <div class="panel-collapse collapse in" id="collapseOne">
                            <div class="panel-body">
                                <p><b>活动时间：</b>&nbsp;<%=activities[i].activity_time%></p>
                                <p><b>活动地点：</b>&nbsp;<%=activities[i].activity_location%></p>
                                <p><b>活动时长：</b>&nbsp;<%=activities[i].activity_dur%></p>
                                <p><b>活动费用：</b>&nbsp;<%=activities[i].activity_pay%> RMB</p>
                                <p><b>活动描述：</b>&nbsp;<%=activities[i].activity_description%></p>
                            </div>
                        </div>
                    </div>
                    <% } %>

                </div>
            </div>
        </div>
    </div><!-- /.main-content -->
</div>

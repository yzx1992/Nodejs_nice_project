                <a href="/" class="dropdown-toggle">
                    <i class="menu-icon fa fa-desktop"></i>
							<span class="menu-text">
								通知管理
							</span>

                    <b class="arrow fa fa-angle-down"></b>
                </a>

                <b class="arrow"></b>

                <ul class="submenu">
                    <li class="">
                        <a href="#" class="dropdown-toggle">
                            <i class="menu-icon fa fa-caret-right"></i>

                            通知查看
                            <b class="arrow fa fa-angle-down"></b>
                        </a>

                        <b class="arrow"></b>

                        <ul class="submenu">
                            <li class="">
                                <a href="/notice_content_yuan">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    学苑通知
                                </a>

                                <b class="arrow"></b>
                            </li>

                            <li class="">
                                <a href="/notice_content_zhibu">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    支部通知
                                </a>

                                <b class="arrow"></b>
                            </li>

                        </ul>
                    </li>

                    <% if (user.stu_role == 1 || user.stu_role == 2) {%>
                    <li class="">
                        <a href="/notice_post">
                            <i class="menu-icon fa fa-caret-right"></i>
                            通知发布
                        </a>

                        <b class="arrow"></b>
                    </li>
                    <%}%>


                </ul>
            </li>



            <!--活动管理-->
            <li class="">
                <a href="#" class="dropdown-toggle">
                    <i class="menu-icon fa fa-picture-o"></i>
							<span class="menu-text">
								活动管理
							</span>

                    <b class="arrow fa fa-angle-down"></b>
                </a>

                <b class="arrow"></b>

                <ul class="submenu">
                    <li class="">
                        <a href="#" class="dropdown-toggle">
                            <i class="menu-icon fa fa-caret-right"></i>

                            活动查看
                            <b class="arrow fa fa-angle-down"></b>
                        </a>

                        <b class="arrow"></b>

                        <ul class="submenu">
                            <li class="">
                                <a href="/activity_content_yuan">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    学苑活动
                                </a>

                                <b class="arrow"></b>
                            </li>

                            <li class="">
                                <a href="/activity_content_zhibu">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    支部活动
                                </a>

                                <b class="arrow"></b>
                            </li>

                        </ul>
                    </li>
                    <% if (user.stu_role == 1 || user.stu_role == 2) { %>
                    <li class="">
                        <a href="/activity_post">
                            <i class="menu-icon fa fa-caret-right"></i>
                            活动发布
                        </a>

                        <b class="arrow"></b>
                    </li>
                    <%}%>
                </ul>
            </li>

            <!--文件管理-->
            <li class="active open">
                <a href="#" class="dropdown-toggle">
                    <i class="menu-icon fa fa-file-o"></i>

							<span class="menu-text">
								文件管理

                                <!-- #section:basics/sidebar.layout.badge -->
								<span class="badge badge-primary" title="5 files">5</span>

                                <!-- /section:basics/sidebar.layout.badge -->
							</span>

                    <b class="arrow fa fa-angle-down"></b>
                </a>

                <b class="arrow"></b>

                <ul class="submenu">
                    <li class="">
                        <a href="/upload">
                            <i class="menu-icon fa fa-caret-right"></i>
                            文件上传
                        </a>

                        <b class="arrow"></b>
                    </li>

                    <li class="">
                        <a href="/file_list">
                            <i class="menu-icon fa fa-caret-right"></i>
                            文件浏览
                        </a>

                        <b class="arrow"></b>
                    </li>

                </ul>
            </li>

            <!--生活-->
            <li class="">
                <a href="#" class="dropdown-toggle">
                    <i class="menu-icon fa fa-list"></i>
							<span class="menu-text">
								生活管理
							</span>

                    <b class="arrow fa fa-angle-down"></b>
                </a>

                <b class="arrow"></b>

                <ul class="submenu">
                    <!--心里普查-->
                    <li class="">
                        <a href="#" class="dropdown-toggle">
                            <i class="menu-icon fa fa-caret-right"></i>

                            心里普查
                            <b class="arrow fa fa-angle-down"></b>
                        </a>

                        <b class="arrow"></b>

                        <ul class="submenu">
                            <li class="">
                                <a href="#">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    心里情况填写
                                </a>

                                <b class="arrow"></b>
                            </li>

                            <li class="">
                                <a href="#">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    普查结果查看
                                </a>

                                <b class="arrow"></b>
                            </li>

                        </ul>
                    </li>

                    <!--学苑小圈-->
                    <li class="">
                        <a href="#" class="dropdown-toggle">
                            <i class="menu-icon fa fa-caret-right"></i>

                            学苑小圈
                            <b class="arrow fa fa-angle-down"></b>
                        </a>

                        <b class="arrow"></b>

                        <ul class="submenu">
                            <li class="">
                                <a href="#">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    书籍分享
                                </a>

                                <b class="arrow"></b>
                            </li>

                            <li class="">
                                <a href="#">
                                    <i class="menu-icon fa fa-caret-right"></i>
                                    心情分享
                                </a>

                                <b class="arrow"></b>
                            </li>

                        </ul>
                    </li>

                    <!--通讯录-->
                    <li class="">
                        <a href="/contact">
                            <i class="menu-icon fa fa-caret-right"></i>
                            通讯录
                        </a>

                        <b class="arrow"></b>
                    </li>

                </ul>
            </li>

            <!--意见建议-->
            <% if (user.stu_role == 1 || user.stu_role == 2) {%>
            <li class="">
                <a href="#" class="dropdown-toggle">
                    <i class="menu-icon fa fa-file-o"></i>

							<span class="menu-text">
								意见管理


							</span>

                    <b class="arrow fa fa-angle-down"></b>
                </a>

                <b class="arrow"></b>

                <ul class="submenu">
                    <li class="">
                        <a href="/advice">
                            <i class="menu-icon fa fa-caret-right"></i>
                            意见建议
                        </a>

                        <b class="arrow"></b>
                    </li>

                    <li class="">
                        <a href="/advice_list">
                            <i class="menu-icon fa fa-caret-right"></i>
                            意见列表
                        </a>

                        <b class="arrow"></b>
                    </li>

                </ul>
            </li>
            <%} else {%>
            <li class="">
                <a href="/advice">
                    <i class="menu-icon fa fa-pencil-square-o"></i>

							<span class="menu-text">
								意见建议
							</span>
                </a>

                <b class="arrow"></b>
            </li>
            <%}%>

        </ul><!-- /.nav-list -->

        <!-- #section:basics/sidebar.layout.minimize -->
        <div class="sidebar-toggle sidebar-collapse" id="sidebar-collapse">
            <i class="ace-icon fa fa-angle-double-left" data-icon1="ace-icon fa fa-angle-double-left" data-icon2="ace-icon fa fa-angle-double-right"></i>
        </div>

        <!-- /section:basics/sidebar.layout.minimize -->
        <script type="text/javascript">
            try{ace.settings.check('sidebar' , 'collapsed')}catch(e){}
        </script>
    </div>

    <!-- /section:basics/sidebar -->
    <div class="main-content">
        <div class="main-content-inner">
            <!-- #section:basics/content.breadcrumbs -->
            <!--索引-->
            <div class="breadcrumbs" id="breadcrumbs">
                <script type="text/javascript">
                    try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
                </script>

                <ul class="breadcrumb">
                    <li class="active">
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="/index">主页</a>
                    </li>
                    <li>
                        <a href="/index">文件管理</a>
                    </li>
                    <li class="active">文件浏览</li>

                </ul><!-- /.breadcrumb -->

                <!-- #section:basics/content.searchbox -->
                <div class="nav-search" id="nav-search">
                    <form class="form-search">
								<span class="input-icon">
									<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
									<i class="ace-icon fa fa-search nav-search-icon"></i>
								</span>
                    </form>
                </div><!-- /.nav-search -->

                <!-- /section:basics/content.searchbox -->
            </div>

            <!-- /section:basics/content.breadcrumbs -->
            <div class="page-content">
                <!-- #section:settings.box -->
                <h3 class="row header smaller lighter blue">
                    <span class="col-xs-6"> 文件列表 </span>
                </h3>
                <div class="col-xs-12">&nbsp;</div>
                <div class="col-xs-12" style="overflow-x: auto">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th width="60%">文件名称</th>
                                <th width="17%">上传时间</th>
                                <th width="13%">上传者</th>
                                <!--<th>浏览</th>-->
                                <th width="10%">下载</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% for (var i in files) {%>
                            <tr>
                                <td><%=files[i].file_name%></td>
                                <td><%=files[i].file_time%></td>
                                <td><%=files[i].file_from%></td>
                                <!--<td>hah</td>-->
                                <td>
                                    <a href="/download?id=<%=files[i].id%>">
                                        <i class="glyphicon glyphicon-save"></i>
                                    </a>
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <%if(user.stu_role ==1 || user.stu_role == 2){%>
                                    <a href="/file_delete?id=<%=files[i].id%>&path=<%=files[i].file_path%>">
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </a>
                                    <%}%>
                                </td>

                            </tr>
                        <%}%>
                        </tbody>
                    </table>
                </div>


            </div><!-- /.page-content -->
        </div>
    </div><!-- /.main-content -->
</div>

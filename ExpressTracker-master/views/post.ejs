<%- include header %>
<div class="hd">
    <h1 class="page_title">快递帮帮取</h1>
</div>
<div class="weui_cells_title">请填写收件人信息</div>
    <form class="weui_cells weui_cells_form" method="post" action="post">
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">姓名</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input class="weui_input" type="text" name="username" placeholder="收件人姓名"/>
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">地址</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input class="weui_input" type="text" name="adress" placeholder="收件人地址(5号楼)"/>
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">快递公司</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input class="weui_input" type="text" name="company" placeholder="快递公司名称(顺丰)"/>
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">手机号</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input class="weui_input" type="number" pattern="[0-9]*" name="telephone" placeholder="收件人手机号"/>
            </div>
        </div>
        <div class="weui_btn_area">
        	<button class="weui_btn weui_btn_primary" type="submit" id="postReq">发布请求</button>
    	</div>     
    </form>
<%- include footer %>
